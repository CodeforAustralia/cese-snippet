{
  "private": true,
  "name": "cese-snippet",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn -s serve || yarn -s dev",
    "build": "preact build --template src/template.html",
    "serve": "yarn build && preact serve",
    "dev": "preact watch --template src/template.html",
    "lint": "eslint src",
    "test": "NODE_ENV=test jest --env=jsdom",
    "test:ci": "CI=true yarn test --coverage --color",
    "test:watch": "yarn test --watchAll"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "node-sass": "^4.7.2",
    "preact-cli": "^2.1.3",
    "preact-render-spy": "^1.2.1",
    "sass-loader": "^6.0.6"
  },
  "dependencies": {
    "bootstrap": "^4.0.0",
    "formik": "^0.11.10",
    "merge": "^1.2.0",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-redux": "^2.0.3",
    "preact-router": "^2.5.7",
    "react-transition-group": "^1.1.2",
    "reactstrap": "^5.0.0-beta.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/browserMocks.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "mjs"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  },
  "babel": {
    "presets": [
      [
        "preact-cli/babel",
        {
          "modules": "commonjs"
        }
      ],
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  }
}
